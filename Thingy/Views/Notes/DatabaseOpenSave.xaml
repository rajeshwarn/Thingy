<UserControl
    x:Class="Thingy.Views.Notes.DatabaseOpenSave"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Column="0">
            <Button
                Content="New NoteFile"
                Command="{Binding NewNoteCommand}"/>
            <Button
                Content="Delete Selected Note"
                Command="{Binding DeleteCommand}"
                CommandParameter="{Binding ElementName=NotesList, Path=SelectedItem}"/>
            <Button
                Content="Import note from file..." 
                Command="{Binding ImportCommand}"/>
            <Button
                Content="Save selected to file..."
                Command="{Binding ExportCommand}"
                CommandParameter="{Binding ElementName=NotesList, Path=SelectedItem}"/>
        </StackPanel>
        <ListBox
            x:Name="NotesList"
            Grid.Column="1"
            ItemTemplate="{StaticResource Note}"
            ItemsSource="{Binding Notes}" />
    </Grid>
</UserControl>
